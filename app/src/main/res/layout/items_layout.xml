<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_parent"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="66dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:adjustViewBounds="true"
                android:background="@drawable/default_avatar"
                android:focusable="false"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/avatar_parent"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/avatar_parent"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/avatar_parent">

            <LinearLayout
                android:id="@+id/img_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_three"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_top"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_five"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_six"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_center"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/img_seven"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_eight"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_nine"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_background"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom"
            android:layout_marginStart="-25dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/avatar_parent">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="5dp"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_time">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>